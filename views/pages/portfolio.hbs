<section class="section-wrap works-grid-3-col-wide pb-90 pt-50" id="portfolio">

    <div class="container-fluid">

        <div class="row heading">
            <div class="col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3">
                <p class="subheading text-center bottom-line">An assortment of work I've done over the years</p>
            </div>
        </div>

        {{#each blogPost}}
            <div class="grid-3-col grid-wide grid-gutter">
                <div class="work-item web-design print">
                    <div class="work-img">
                        <img src="{{this.thumbnailURL}}" alt="">
                        <div class="work-overlay">
                            <div class="work-description">
                                <h3>
                                    <a href="/portfolio/{{this.slug}}">{{this.title}}</a>
                                </h3>
                                <span>
                                    {{this.descriptionTitle}}
                                </span>
                            </div>
                            <a href="/portfolio/{{this.slug}}" class="btn btn-lg btn-transparent" title="View More">More</a>
                        </div>
                    </div>
                </div>
            </div>
        {{/each}}

    </div>
</section>
{{> bottom-3 }}

{{> bottom-2 }}